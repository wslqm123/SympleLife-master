<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_news_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_bg">

            <ImageView
                android:id="@+id/iv_special"
                android:layout_width="96dp"
                android:layout_height="36dp"
                />

            <ImageView
                android:id="@+id/icon"
                android:layout_below="@id/iv_special"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/icon"
                android:singleLine="true"
                android:text="哈哈"
                android:textColor="#212121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/name"
                android:layout_toRightOf="@+id/icon"
                android:maxLines="2"
                android:minLines="1"
                android:padding="5dp"
                android:text="哈哈"
                android:textColor="#727272"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/subname"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/news_tag"
                android:text="独家"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_news_content_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_bg">

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/icon_1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/icon_1"
                android:singleLine="true"
                android:text="哈哈"
                android:textColor="#212121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subname_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/name_1"
                android:layout_toRightOf="@+id/icon_1"
                android:maxLines="2"
                android:minLines="1"
                android:padding="5dp"
                android:text="哈哈"
                android:textColor="#727272"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/subname_1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/news_tag"
                android:text="独家"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_news_content_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_bg">

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/icon_2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/icon_2"
                android:singleLine="true"
                android:text="哈哈"
                android:textColor="#212121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subname_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/name_2"
                android:layout_toRightOf="@+id/icon_2"
                android:maxLines="2"
                android:minLines="1"
                android:padding="5dp"
                android:text="哈哈"
                android:textColor="#727272"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/subname_2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/news_tag"
                android:text="独家"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>